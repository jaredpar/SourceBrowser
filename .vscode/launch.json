{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Source Browser",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "windows": {
                "program": "${workspaceFolder}/src/SourceIndexServer/bin/Debug/net8.0/Microsoft.SourceBrowser.SourceIndexServer.exe",
            },
            "linux": {
                "program": "${workspaceFolder}/src/SourceIndexServer/bin/Debug/net8.0/Microsoft.SourceBrowser.SourceIndexServer",
            },
            "args": [],
            // "cwd": "c:/users/jaredpar/code/sourcebrowser/testSite",
            "cwd": "${workspaceFolder}/src/SourceIndexServer/bin/Debug/net8.0",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Html Generator",
            "request": "launch",
            "type": "coreclr",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/src/HtmlGenerator/bin/Debug/net8.0/HtmlGenerator",
            "cwd": "${workspaceFolder}",
            "args": ["../complog/build.complog", "/out:testSite", "/force" ]
            // "cwd": "${workspaceFolder}/src/SourceIndexServer/bin/Debug/net6.0",
        }
    ]
}