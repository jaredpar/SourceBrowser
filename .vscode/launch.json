    "version": "0.2.0",
    "configurations": [
        {
            "name": "Source Browser",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "windows": {
                "program": "${workspaceFolder}/src/SourceIndexServer/bin/Debug/net8.0/Microsoft.SourceBrowser.SourceIndexServer.exe",
                "env":{
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "HtmlGeneratorFilePath": "${workspaceFolder}\\src\\HtmlGenerator\\bin\\Debug\\net8.0\\HtmlGenerator.dll",
                }
            },
            "linux": {
                "program": "${workspaceFolder}/src/SourceIndexServer/bin/Debug/net8.0/Microsoft.SourceBrowser.SourceIndexServer",
                "env":{
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "HtmlGeneratorFilePath": "${workspaceFolder}/src/HtmlGenerator/bin/Debug/net8.0/HtmlGenerator.dll",
                }
            },
            "args": [],
            // "cwd": "c:/users/jaredpar/code/sourcebrowser/testSite",
            "cwd": "${workspaceFolder}/src/SourceIndexServer/bin/Debug/net8.0",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Html Generator",
            "request": "launch",
            "type": "coreclr",
            "preLaunchTask": "dotnet: build",
            "windows": {
                "program": "${workspaceFolder}/src/HtmlGenerator/bin/Debug/net8.0/HtmlGenerator.dll",
                "args": ["c:/users/jaredpar/temp/razor/build.complog", "/out:testSite", "/force", "/projectName:razor" ]
            },
            "linux": {
                "program": "${workspaceFolder}/src/HtmlGenerator/bin/Debug/net8.0/HtmlGenerator",
                "args": ["/mnt/c/Users/jaredpar/temp/console/msbuild.complog", "/out:testSite", "/force", "/projectName:complog" ]
            },
            "cwd": "${workspaceFolder}",
            // "args": ["../complog/build.complog", "/out:testSite", "/force", "/projectName:complog" ]
            "args": []
            // "cwd": "${workspaceFolder}/src/SourceIndexServer/bin/Debug/net6.0",
        }
    ]
}